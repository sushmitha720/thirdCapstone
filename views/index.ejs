<%- include("partials/header.ejs") %>
  <div class="container featured">
    <h1>Featured Blogs</h1>
    <% if (posts.length > 0) { %>
      
    <div class="row py-3 firstblog">
      <div class="col-sm-12 pt-sm-0 pt-3">
        <div class="card">
          <div class="card-body">            
            <em><%= posts[posts.length-1].date %></em>
            <h5 class="card-title">
              <a href="/view/<%= posts.length-1 %>" class="stretched-link">
              <h3><%= posts[posts.length-1].title %></h3>
              </a>
              </h5>
            <p class="card-text">
              <%= posts[posts.length-1].text %>
            </p>
          </div>
        </div>
      </div>
    </div> 
    <% if (posts.length > 1) { %>    
    <div class="row py-3">
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">            
            <em><%= posts[posts.length-2].date %></em>
            <h5 class="card-title">
              <a href="/view/<%= posts.length-2 %>" class="stretched-link">
               <h4> <%= posts[posts.length-2].title %></h4></a></h5>
            <p class="card-text"><%= posts[posts.length-2].text %></p>
          </div>
        </div>
      </div>
      <% if (posts.length > 2) { %>    
      <div class="col-sm-6 pt-sm-0 pt-3">
        <div class="card">
          <div class="card-body"><em><%= posts[posts.length-3].date %></em>
            <h5 class="card-title">
              <a href="/view/<%= posts.length-3 %>" class="stretched-link">
                <h4><%= posts[posts.length-3].title %></h4></a></h5>
            
            <p class="card-text"><%= posts[posts.length-3].text %></p>
          </div>
        </div>
      </div>
      <% } %>
    </div> 
    <% } %>
</div>
<div class="container alllist">
  <div class="row py-4">
    <div class="col-sm-12  pt-sm-0 pt-3">
      <h2>All posts</h2>
      <div class="card mt-3">
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <% for( let index = posts.length-1; index >= 0 ; index--) { %>
              <li class="list-group-item">
                <a href="/view/<%= index %>"><%= posts[index].title %></a>
              </li>
            <% } %>
          </ul>          
        </div>
      </div>
    </div>
  </div>   
</div>
<% } else{ %>
    <div class="row py-3">
      <div class="col-sm-12 pt-sm-0 pt-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
              <p>
                No posts üôÅ
              </p>
              </h5>
            <p class="card-text">
             Create your first blog post 
             <a href="/create"><em><b>here.</b></em></a> 
            </p>
          </div>
        </div>
      </div>
    </div> 
<% } %>

